<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="96dp"
    >

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/simple_padding"
        android:paddingLeft="@dimen/simple_padding"
        android:layout_marginEnd="@dimen/simple_padding"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:id="@+id/textView2" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView"
        android:layout_above="@+id/line"
        android:id="@+id/textView3" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/simple_padding"
        android:id="@id/line"
        android:layout_marginBottom="@dimen/simple_padding"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>